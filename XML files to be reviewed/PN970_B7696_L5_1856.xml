        <front rend="align(centre)">
            <pb n="1"/>
            <div type="cover" rend="yellow coloured pictorial wrappers">
                <bibl>
                    <title level="s">NEW COLORED TOYS.</title>
                    <figure type="borderornament"/>
                    <title level="m">LITTLE<lb/>POEMS,<lb/>FROM THE GERMAN.<lb/>&rule;<lb/>Part
                        First.</title>
                    <publisher>BOSTON: BROWN, TAGGARD &amp;CHASE, 24 CORNHILL.</publisher>
                </bibl>
            </div>

            <pb n="2"/>
            <note rend="align(left)" type="handwritten">3&mdash;19&mdash;<lb/>KV&mdash;2.00</note>

